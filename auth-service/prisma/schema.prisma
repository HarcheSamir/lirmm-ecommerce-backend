// ===== FILE: auth-service/prisma/schema.prisma =====
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Role {
  id          String   @id @default(uuid())
  name        String   @unique // e.g., 'ADMIN', 'CLIENT'
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  users       User[]
  permissions RolePermission[]
}

model Permission {
  id          String   @id @default(uuid())
  name        String   @unique // e.g., 'create:product', 'read:users'
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  roles RolePermission[]
}

model RolePermission {
  roleId       String
  permissionId String
  assignedAt   DateTime @default(now())

  role       Role       @relation(fields: [roleId], references: [id], onDelete: Cascade)
  permission Permission @relation(fields: [permissionId], references: [id], onDelete: Cascade)

  @@id([roleId, permissionId])
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String? // <-- MODIFIED: Made optional for invited users
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  isActive  Boolean  @default(true)

  profileImage String?

  // --- NEW FIELDS for invitation flow ---
  invitationToken   String?   @unique
  invitationExpires DateTime?
  // --- END NEW FIELDS ---

  roleId    String
  role      Role     @relation(fields: [roleId], references: [id])

  @@index([roleId])
}